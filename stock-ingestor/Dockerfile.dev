FROM golang:1.25-alpine

# Install Air for live reload
RUN go install github.com/air-verse/air@latest

WORKDIR /app

# Copy dependency files first (better layer caching)
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Run Air for live reload
CMD ["air", "-c", ".air.toml"]
